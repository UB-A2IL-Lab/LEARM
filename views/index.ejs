<head>
    <meta charset="UTF-8">
    <title>Demo-UI</title>
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css'>
    <link rel='stylesheet' href='index.css'>
</head>
<body>
    <div class="ui top attached demo menu">
        <a class="item sidebar-trigger">
            <i class="sidebar icon"></i>
        </a>
        <div class="ui toggle checkbox" id="id-toggle-display">
            <input type="checkbox" id="id-input-toggle-display" title="Toggle Participant display" name="toggledisplay">
            <label for="id-input-toggle-display"></label>
        </div>
    </div>
    <div class="ui bottom attached segment sidebar-content-wrapper">
        <div class="ui inverted wide icon left inline vertical sidebar menu" onclick="event.preventDefault(); event.stopImmediatePropagation();">
            <div class="ui top attached tabular menu">
                <a class="active item" data-tab="first" title="Session">
                    <i class="gamepad icon"></i>
                </a>
                <a class="item" data-tab="second" title="Test">
                    <i class="video camera icon"></i>
                </a>
                <a class="item" data-tab="three" title="Transfer">
                    <i class="video play icon"></i>
                </a>
                <a class="item" data-tab="four" title="Preview">
                    <i class="calendar icon"></i>
                </a>
            </div>
            <div class="ui bottom attached active inverted tab segment" data-tab="first">
                <h3 class="ui header sidebar-section-header">Session Control</h3>
                <form class="ui form pad-default">
                    <div class="inline fields">
                        <div class="sixteen wide field small">
                            <label for="id-input-technician-id" title="Technician ID">TID</label>
                            <input type="text" id="id-input-technician-id" title="Enter Technician ID"
                                   placeholder="Technician ID">
                        </div>
                    </div>
                    <div class="inline fields">
                        <div class="sixteen wide field small">
                            <label for="id-input-participant-id" title="Participant ID">PID</label>
                            <input type="text" id="id-input-participant-id" title="Enter Participant ID"
                                   placeholder="Participant ID">
                        </div>
                    </div>
                    <div class="inline fields">
                        <div class="sixteen wide field small">
                            <label for="id-input-session-id" title="Session ID">SID</label>
                            <input type="text" id="id-input-session-id" title="Enter Session ID" placeholder="Session ID">
                        </div>
                    </div>
                </form>
                <div class="ui fitted divider"></div>
                <div class="ui vertical buttons btn-session-control">
                  <button class="ui inverted green button">Start Session</button>
                  <button class="ui inverted yellow button">Pause Session</button>
                  <button class="ui inverted red button">End Session</button>
                </div>
                <div class="ui mini olive inverted statistic">
                  <div class="value">
                    00:00:00
                  </div>
                  <div class="label">
                    Recording Length
                  </div>
                </div>
            </div>
            <div class="ui bottom attached inverted tab segment" data-tab="second">
                <h3 class="ui header sidebar-section-header">A/V Control</h3>
                <div class="ui accordion pad-default">
                    <div class="title active">
                        <i class="icon dropdown"></i>
                        Subject A/V Test
                    </div>
                    <div class="content active">
                        <div class="camera_preview" id="camera_preview">
                            <video autoplay="autoplay" id="videoElement" width="200" height="200">
                                Your browser does not support video streaming.
                                <source src="" type="video/mp4">
                            </video>
                        </div>
                    </div>
                </div>
                <div class="ui accordion pad-default">
                    <div class="title active">
                        <i class="icon dropdown"></i>
                        Technician Audio Test
                    </div>
                    <div class="content active">

                    </div>
                </div>   
            </div>
            <div class="ui bottom attached inverted tab segment" data-tab="three">
                <h3 class="ui header sidebar-section-header">Transfer</h3>
            </div>
            <div class="ui bottom attached inverted tab segment" data-tab="four">
                <h3 class="ui header sidebar-section-header">Preview</h3>
                <div class="ui middle aligned selection list pad-default">
                    <div class="item align-text-left">
                        <img class="ui avatar image" src="user-default.jpeg">
                        <div class="content">
                          File1.mp4
                        </div>
                    </div>
                    <div class="item align-text-left">
                        <img class="ui avatar image" src="user-default.jpeg">
                        <div class="content">
                          File2.mp4
                        </div>
                    </div>
                    <div class="item align-text-left">
                        <img class="ui avatar image" src="user-default.jpeg">
                        <div class="content">
                          File3.wav
                        </div>
                    </div>
                </div>             
            </div>
        </div>
        <div class="pusher">
            <div class="ui basic segment">
              <h3 class="ui header">Application Content</h3>
            </div>
        </div>
    </div>

<script src="https://code.jquery.com/jquery-3.1.1.min.js"
  integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
  crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>
<script src='index.js'></script>

</body>
</html>